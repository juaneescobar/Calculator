<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#abc5d1"
    android:verticalScrollbarPosition="left"
    tools:context="com.example.juliana.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85pt"
        android:weightSum="4"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/Datos"
            android:gravity="start"
            android:textSize="20pt"
            android:background="#ffff" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="68pt"
            android:layout_weight="2"
            android:id="@+id/But_Ac"
            android:text="Borrar"
            android:gravity="bottom|center|top"
            android:onClick="Delete"
            android:textSize="10pt"

                        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42pt"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_1"
            android:text="1"
            android:onClick="Boton"
            android:textSize="10pt"


            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_2"
            android:text="2"
            android:onClick="Boton"
            android:textSize="10pt"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_3"
            android:text="3"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_4"
            android:text="/"
            android:onClick="ActualOperator"
            android:textSize="10pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42pt"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_5"
            android:text="4"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_6"
            android:text="5"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_7"
            android:text="6"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_8"
            android:text="*"
            android:onClick="ActualOperator"
            android:textSize="10pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42pt"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_9"
            android:text="7"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_10"
            android:text="8"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_11"
            android:text="9"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_12"
            android:text="+"
            android:onClick="ActualOperator"
            android:textSize="10pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42pt"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_13"
            android:text="0"
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_14"
            android:text="."
            android:onClick="Boton"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_15"
            android:text="="
            android:onClick="Result"
            android:textSize="10pt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="42pt"
            android:layout_weight="1"
            android:id="@+id/But_16"
            android:text="-"
            android:onClick="ActualOperator"
            android:textSize="10pt"/>
    </LinearLayout>



</LinearLayout>
